<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:minHeight="?attr/actionBarSize"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    tools:context=".RemainderListActivity" >

    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ripple_transparent"
        android:contentDescription="@string/notefy_app_name"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple_transparent"
        android:contentDescription="@string/notefy_app_name"
        android:src="@mipmap/ic_navigation_arrow_back"
        android:visibility="visible" />

    <TextView
        android:id="@+id/toolbarText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:text="@string/notefy_app_name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <android.support.v7.widget.SearchView
        android:id="@+id/svSearchContact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@drawable/search_edittext"
        android:paddingRight="20dp"
        android:visibility="gone"
        app1:iconifiedByDefault="false"
        app1:queryHint="@string/search_contact" />

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/deleteImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_action_delete"
            android:background="@drawable/ripple_transparent"
            android:contentDescription="@string/notefy_app_name"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_transparent"
            android:contentDescription="@string/notefy_app_name"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ic_search"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_transparent"
            android:contentDescription="@string/notefy_app_name"
            android:layout_marginRight="20dp"
            android:src="@mipmap/ic_content_add"
            android:visibility="gone" />
    </LinearLayout>

</android.support.v7.widget.Toolbar>